[Unit]
Description=Append custom hosts to /etc/hosts
After=local-fs.target network-pre.target
Before=network.target

[Service]
Type=oneshot
ExecStart=/bin/sh -c 'grep -q "unraid.lan" /etc/hosts || echo "192.168.7.179 unraid.lan" >> /etc/hosts'
ExecStart=/bin/sh -c 'grep -q "minipc.lan" /etc/hosts || echo "192.168.3.51 minipc.lan" >> /etc/hosts'
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target
